@model DoubleGis.Link.Models.SearchResponse

@{
    ViewBag.Title = "Поиск";
}

<div class="row">
    <div class="col-xs-12 col-md-8">
        <h1><span class="text-capitalize">@Model.What</span> в @Model.Where: найдено @Model.Total.</h1>

        @foreach (var card in @Model.Result)
        {
            <a href="/card/@string.Format("{0}/{1}", card.Id, card.Hash)" class="card-link"><strong>@card.Name.Split(',').First()</strong></a> <small>@string.Join(", ", @card.Name.Split(',').Skip(1))</small> 
            <p>Рубрики: @string.Join(" ", card.Rubrics.Select(r => r.Replace('/', '-')))</p>
            <p>Aдрес: @string.Join(" ", card.Address)</p>
        }
    </div>
</div>

<div class="bs-callout bs-callout-info">
    <h4>Demo <code>:focus</code> state</h4>
    <p>The above example input uses custom styles in our documentation to demonstrate the <code>:focus</code> state on a <code>.form-control</code>.</p>
</div>